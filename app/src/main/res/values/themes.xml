<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Base DayNight theme -->
    <style name="Base.Theme.Possin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/customGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/tapeRed</item>
        <item name="colorSecondaryContainer">@color/grey</item>

        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/darkerRed</item>
        <item name="android:navigationBarColor">@color/customGray</item>
        <item name="android:windowBackground">@color/screenBackground</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

    </style>

    <!-- ✅ Splash screen -->
    <style name="Theme.Possin.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/tapeRed</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/for_splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/tapeRed</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Possin</item>
    </style>

    <!-- Transparent popup (spinner/autocomplete dropdown) -->
    <style name="NoOverlayPopupTheme" parent="ThemeOverlay.Material3">
        <item name="colorSurface">@color/inputFieldBackground</item>
        <item name="colorOnSurface">@color/textPrimary</item>
    </style>

    <!-- Theme alias -->
    <style name="Theme.Possin" parent="Base.Theme.Possin" />

</resources>
