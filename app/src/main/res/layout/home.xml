<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEE8F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!--        <TextView-->
        <!--            android:id="@+id/header_name"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Good morning!"-->
        <!--            android:textSize="20sp"-->
        <!--            android:textColor="#000"-->
        <!--            android:layout_toEndOf="@id/logo"-->
        <!--            android:layout_marginStart="8dp"-->
        <!--            android:layout_centerVertical="true"/>-->

        <!--        <TextView-->
        <!--            android:id="@+id/merchant_name"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textSize="18sp"-->
        <!--            android:textColor="#000"-->
        <!--            android:layout_below="@id/header_name"-->
        <!--            android:layout_toEndOf="@id/logo"-->
        <!--            android:layout_marginStart="8dp"-->
        <!--            android:layout_marginTop="4dp"/>-->
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#E5C7FD"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_margin="16dp"
        android:padding="16dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            card_view:columnCount="3"
            card_view:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:layout_rowWeight="1"
                card_view:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/coin_payment"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="payment"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:layout_rowWeight="1"
                card_view:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/money"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="currency"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:layout_rowWeight="1"
                card_view:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/merchant"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="merchant"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:layout_rowWeight="1"
                card_view:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/xpub"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xpub"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:layout_rowWeight="1"
                card_view:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/export"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="export"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/transactionsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transactions"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/seeAllTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
