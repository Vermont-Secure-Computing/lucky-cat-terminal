<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screenBackground">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/tapeRed"
        android:elevation="4dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/lcterm"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Spinner
            android:id="@+id/localeSpinner"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:popupTheme="@style/NoOverlayPopupTheme"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Network Banner -->
            <TextView
                android:id="@+id/networkBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tapeRed"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="@string/internet_is_unstable_try_again"/>

            <!-- Accepted Currency -->
            <TextView
                android:id="@+id/acceptedCurrencyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accepted_currency"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"/>

            <!-- Crypto container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/cardBackground">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/crypto_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center" />
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <!-- Payment button + GIF -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:background="@color/tapeRed">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/button1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@drawable/rounded_button"
                            android:src="@drawable/coin_payment"
                            android:scaleType="centerInside"
                            android:layout_marginTop="24dp"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accept_payment"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="2dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/nekuGifView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/neku_gif_description" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Settings -->
            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/textPrimary"/>

            <!-- Buttons grid -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/cardBackground"
                android:paddingTop="16dp"
                android:layout_marginBottom="16dp">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:columnCount="2">

                    <!-- Button 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/button2"
                            android:layout_width="80dp"
                            android:layout_height="76dp"
                            android:background="@drawable/rounded_button"
                            android:src="@drawable/key"
                            android:scaleType="centerInside"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/api_key"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>

                    <!-- Button 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/button4"
                            android:layout_width="80dp"
                            android:layout_height="76dp"
                            android:background="@drawable/rounded_button"
                            android:src="@drawable/merchant"
                            android:scaleType="centerInside"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/merchant_info"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>

                    <!-- Button 5 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/button5"
                            android:layout_width="80dp"
                            android:layout_height="76dp"
                            android:background="@drawable/rounded_button"
                            android:src="@drawable/xpub"
                            android:scaleType="centerInside"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coin_settings"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>

                    <!-- Button 6 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/button6"
                            android:layout_width="80dp"
                            android:layout_height="76dp"
                            android:background="@drawable/rounded_button"
                            android:src="@drawable/export"
                            android:scaleType="centerInside"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/export"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>
                </androidx.gridlayout.widget.GridLayout>
            </androidx.cardview.widget.CardView>

            <!-- Transactions -->
            <androidx.cardview.widget.CardView
                android:id="@+id/transactionsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="8dp"
                card_view:cardBackgroundColor="@color/cardBackground"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/transactions"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/seeAllTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_all"
                            android:textSize="16sp"
                            android:textColor="@color/tapeRed"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/transactionsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@color/cardBackground"/>

                    <TextView
                        android:id="@+id/noTransactionsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_transactions_yet"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Powered By -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/poweredByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/powered_by"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/vermontImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vermont"
                    android:contentDescription="Vermont Image" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
