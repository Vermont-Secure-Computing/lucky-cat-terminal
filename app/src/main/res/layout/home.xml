<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/customGray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="16dp">

                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/coin_payment"
                    android:scaleType="centerInside"
                    android:padding="16dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                android:layout_marginBottom="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Four-row GridLayout for the buttons -->
                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:columnCount="2"
                        app:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_rowWeight="1"
                            app:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/button2"
                                android:layout_width="80dp"
                                android:layout_height="76dp"
                                android:background="@drawable/rounded_button"
                                android:src="@drawable/key"
                                android:scaleType="centerInside"
                                android:padding="16dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="api key"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_rowWeight="1"
                            app:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/button4"
                                android:layout_width="80dp"
                                android:layout_height="76dp"
                                android:background="@drawable/rounded_button"
                                android:src="@drawable/merchant"
                                android:scaleType="centerInside"
                                android:padding="16dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="merchant info"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_rowWeight="1"
                            app:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/button5"
                                android:layout_width="80dp"
                                android:layout_height="76dp"
                                android:background="@drawable/rounded_button"
                                android:src="@drawable/xpub"
                                android:scaleType="centerInside"
                                android:padding="16dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="coin settings"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_rowWeight="1"
                            app:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/button6"
                                android:layout_width="80dp"
                                android:layout_height="76dp"
                                android:background="@drawable/rounded_button"
                                android:src="@drawable/export"
                                android:scaleType="centerInside"
                                android:padding="16dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="export"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.gridlayout.widget.GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/transactionsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="8dp"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transactions"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#989696"/>

                        <TextView
                            android:id="@+id/seeAllTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textSize="16sp"
                            android:textColor="@color/tapeRed"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/transactionsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@android:color/white"/>

                    <TextView
                        android:id="@+id/noTransactionsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No transactions yet.."
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="16dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/poweredByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powered By"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/vermontImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vermont"
                    android:contentDescription="Vermont Image" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
