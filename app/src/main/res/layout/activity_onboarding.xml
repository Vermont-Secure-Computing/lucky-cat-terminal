<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Cryptocurrencies to Accept"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <CheckBox
        android:id="@+id/checkbox_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin" />

    <CheckBox
        android:id="@+id/checkbox_ethereum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethereum" />

    <CheckBox
        android:id="@+id/checkbox_litecoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Litecoin" />

    <CheckBox
        android:id="@+id/checkbox_dogecoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dogecoin" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />
</LinearLayout>