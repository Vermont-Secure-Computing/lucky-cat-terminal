<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screenBackground">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBackground"
        android:elevation="4dp"
        android:padding="4dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/textPrimary" />

        <TextView
            android:id="@+id/confirm_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_pin"
            android:textSize="22sp"
            android:textColor="@color/textPrimary"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_pin"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Pin circles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/pinCircle1"
                style="@style/PinCircleStyle" />
            <View
                android:id="@+id/pinCircle2"
                style="@style/PinCircleStyle" />
            <View
                android:id="@+id/pinCircle3"
                style="@style/PinCircleStyle" />
            <View
                android:id="@+id/pinCircle4"
                style="@style/PinCircleStyle" />
        </LinearLayout>

        <!-- Number Pad -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="3"
            android:alignmentMode="alignMargins">

            <!-- Numbers -->
            <Button android:text="1" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="2" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="3" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="4" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="5" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="6" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="7" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="8" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="9" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <View android:layout_width="0dp" android:layout_height="0dp"/>
            <Button android:text="0" style="@style/PinButtonStyle" android:onClick="onNumberClick"/>
            <Button android:text="âŒ«" style="@style/PinButtonStyle" android:onClick="onBackspaceClick"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>
